{
  "manifest_version": 3,
  "name": "Hello Component",
  "version": "1.0",
  "description": "A simple React Extension with modular components",
  "permissions": ["storage", "tabs", "activeTab", "sidePanel", "scripting"],
  "host_permissions": ["<all_urls>"],

  "side_panel": {
    "default_path": "index.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/ProfileSaver.content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["dist/AutoScroll.content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["dist/LinkNavigator.content.js"],
      "run_at": "document_idle"
    }
  ]

}
